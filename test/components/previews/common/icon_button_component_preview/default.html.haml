    = render(Common::IconButtonComponent.new(icon:, size: :large, scheme: :danger))

  = render(BaseComponent.new(tag: :div, class: "inline-flex items-center justify-center gap-2")) do
    = render(Common::IconButtonComponent.new(icon:, size: :small, scheme: :danger_invisible))
    = render(Common::IconButtonComponent.new(icon:, size: :medium, scheme: :danger_invisible))
    = render(Common::IconButtonComponent.new(icon:, size: :large, scheme: :danger_invisible))