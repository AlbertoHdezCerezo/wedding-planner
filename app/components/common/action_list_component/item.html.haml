= base_component(**content_tag_arguments) do
  - if leading_visual?
    %span.mr-2= leading_visual

  .flex-1.inline-flex.items-center.justify-between
    = base_component(tag: :span, **label_tag_arguments) do
      = @label || content

    - if trailing_visual?
      %span.ml-2= trailing_visual

  - if active
    .absolute.h-6.bg-gray-900.rounded-tr-sm.rounded-br-sm{ class: "left-[-8px] w-[2.5px]" }
