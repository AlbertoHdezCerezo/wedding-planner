= render(BaseComponent.new(tag: :div, classes: "h-screen w-screen overflow-hidden flex flex-row", **content_tag_args)) do
  -# Page Sidebar
  = render(Layout::PageComponent::SidebarComponent.new)

  -# Page Body
  .flex-1.flex.flex-col
    -# Page Context
    .w-full.h-14.border-b-2.border-gray-300
      %nav{ class: "h-full flex items-center px-4", role: "navigation", "aria-label": "page-content" }
        %ul{ class: "flex flex-row items-center gap-1", role: "list" }
          %li{ class: "cursor-pointer", role: "listitem" }
            %a{ class: "px-2 py-1 hover:bg-gray-100" } weddings
            %span /
          %li{ role: "listitem" }
            %a weddings

    -# Page Content
    %main.flex-1.px-12.py-8.flex.flex-col.gap-2
      = content
