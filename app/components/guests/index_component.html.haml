%div{ content_tag_arguments }
  - if guests.empty?
    = icon_component(icon: "inbox",
                     size: :xl,
                     class: "text-gray-600 mb-6",
                     style: "height: 48px !important; width: 48px !important")
    = title_component(title: "Your guests list is empty") do |title|
      - title.with_subheader_text("Start preparing the guests for the wedding")
    = button_component(label: "add guest",
                       scheme: :primary,
                       class: "mt-6",
                       tag: :a,
                       href: new_wedding_guests_path(wedding),
                       "data-turbo-frame": "modal")

  - else
    = render Guests::IndexComponent::Guest.with_collection(guests)