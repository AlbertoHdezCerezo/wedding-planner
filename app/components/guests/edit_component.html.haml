= turbo_frame_tag("modal") do
  = modal_component do |modal|
    - modal.with_modal_content(class: "w-[600px]") do |content|
      -# Header
      - content.with_header(title: editing? ? t(".update.title") : t(".create.title"))

      -# Guest Form
      = render Guests::EditComponent::Form.new(wedding:, guest:)

      -# Footer
      - content.with_footer do
        .w-full.inline-flex.justify-end.gap-3
          = button_component(label: t(".cancel"),
                              scheme: :secondary,
                              data: { action: "click->common--modal-component#close" })
          = button_component(label: editing? ? t(".update.confirm") : t(".create.confirm"),
                             form: "guest-form",
                             type: "submit")
