= turbo_frame_tag("modal") do
  = modal_component do |modal|
    - modal.with_modal_content(class: "w-[600px]") do |content|
      -# Header
      - content.with_header(title: "Add guest")

      -# Content
      - unless guest.new_record?
        = render Guests::IndexComponent::Guest.new(guest:, class: "px-6 bg-gray-50")

      -# Guest Form
      = render Guests::EditComponent::Form.new(wedding:, guest:)

      -# Footer
      - content.with_footer do
        .w-full.inline-flex.justify-end.gap-3
          = button_component(label: "Cancel", scheme: :secondary, data: { action: "click->common--modal-component#close" })
          = button_component(label: wedding.new_record? ? "Create" : "Save", type: "submit", form: "guest-form")
