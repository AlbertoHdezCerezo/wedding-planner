= render BaseComponent.new(**content_tag_arguments) do
  -# Header
  = title_component(title: "Edit guest", class: "px-6")

  -# Guest Preview
  = render Guests::ShowComponent.new(guest:, class: "px-6 bg-gray-50")

  -# Guest Form
  = form_with(model: guest, builder: ComponentFormBuilder, class: "flex flex-col gap-6 py-4") do |form|
    -# Form Group
    .inline-flex.gap-8.px-6
      = form.text_field(:name, label: "First Name", caption: "This will be publicly visible")

    %hr

    .inline-flex.items-center.justify-end.px-6.gap-3
      = button_component(label: "Cancel", scheme: :danger_invisible)
      = button_component(label: "Save")