          = icon_component(icon: :link, class: "!w-[12px] !h-[12px]")
          %p{ class: "text-[10px] tracking-[.05em]" } Las Hurdes
      %li
        = link_to("https://turismo.caceres.es/", target: "_blank", class: "inline-flex items-center justify-start gap-2 text-gray-500 hover:text-gray-700 underline underline-offset-2") do
          = icon_component(icon: :link, class: "!w-[12px] !h-[12px]")
          %p{ class: "text-[10px] tracking-[.05em]" } Cáceres
      %li
        = link_to("https://turismomerida.org/inicio/", target: "_blank", class: "inline-flex items-center justify-start gap-2 text-gray-500 hover:text-gray-700 underline underline-offset-2") do
          = icon_component(icon: :link, class: "!w-[12px] !h-[12px]")
