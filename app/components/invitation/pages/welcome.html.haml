  .relative.h-full.flex.flex-col.justify-between
    %h1.mt-16.mb-32.space-y-4.font-newsreader.text-6xl.text-gray-700{ class: "leading-[0.6]" }
      %p{ class: "first-letter:mb-3" } Alberto
      %p.ml-10 •
      %p{ class: "first-letter:mb-3" } Andrea

    .space-y-6
      %h2.uppercase.text-gray-700{ class: "w-[85%] text-[10px] tracking-[.25em]" }
