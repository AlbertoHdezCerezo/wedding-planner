= turbo_frame_tag("modal") do
  = modal_component do |modal|
    - modal.with_modal_content(class: "w-[800px]") do |content|
      -# Header
      - content.with_header(title: "Create wedding")

      -# Guest Form
      = render Weddings::EditComponent::Form.new(wedding:)

      -# Footer
      - content.with_footer do
        .w-full.inline-flex.justify-end.gap-3
          = button_component(label: "Cancel", scheme: :secondary, data: { action: "click->common--modal-component#close" })
          = button_component(label: wedding.new_record? ? "Create" : "Save", type: "submit", form: "wedding-form")
