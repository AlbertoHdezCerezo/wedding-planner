= render Layout::PageComponent.new(body_tag_arguments: content_tag_arguments) do
  -# Page Header
  .flex.flex-col.items-start.justify-between.gap-3
    -# Back Label
    -# TODO: replace by button component
    = link_to(weddings_path, class: "flex flex-row items-center gap-2 mb-1 text-gray-500 hover:text-gray-900 hover:underline") do
      = icon_component(icon: "arrow-left", size: :xs)
      %p.text-xs Back to weddings

    -# Title
    = title_component(title: @wedding.name) do |title|
      - title.with_subheader_horizontal_description_list(separator: "Â·") do |description|
        - description.with_icon_field(field_icon: "calendar", field_description: "#{wedding.date.to_s} (#{(wedding.date - Date.current).to_i} days left)")
        - description.with_icon_field(field_icon: "globe", field_description: "Plasencia, Spain")

        - guests_count = wedding.guests.any? ? "#{wedding.guests.count} guests" : "No guests list"
        - description.with_icon_field(field_icon: "user", field_description: guests_count)

        - invitations_count = wedding.invitations.any? ? "#{wedding.invitations.count} invitations" : "No invitations sent"
        - description.with_icon_field(field_icon: "letter", field_description: invitations_count)

  -# Content
  .flex-grow.overflow-hidden
    = tab_navigation_component do |navigation|
      - navigation.with_item(wedding_guests_path(wedding), "Guests")
      - navigation.with_item(wedding_invitations_path(wedding), "Invitations")
      - navigation.with_item(wedding_schedule_path(wedding), "Schedule")

      - if content?
        = content
