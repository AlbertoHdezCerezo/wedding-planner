= render Layout::PageComponent.new do
  .h-full.w-full.flex.flex-col.gap-4
    -# Page Header
    .flex.flex-col.items-start.justify-between.gap-3
      -# Back Label
      = link_to("/", class: "flex flex-row items-center gap-2 mb-1 text-gray-500 hover:text-gray-900 hover:underline") do
        = icon_component(icon: "arrow-left", size: :xs)
        %p.text-xs Back to weddings

      -# Title
      = title_component(title: "Alberto & Andreas's Wedding") do |title|
        - title.with_subheader_horizontal_description_list(separator: "Â·") do |description|
          - description.with_icon_field(field_icon: "calendar", field_description: "14/09/2023 (340 days left)")
          - description.with_icon_field(field_icon: "globe", field_description: "Plasencia, Spain")

    -# Content
    = render Common::TabNavigationComponent.new do |navigation|
      - navigation.with_item("/", "Tasks", active: true)
      - navigation.with_item("/", "Guests")
      - navigation.with_item("/", "Plan")
      - navigation.with_item("/", "Budget")

      - if content?
        = content
