= render Layout::PageComponent.new do |page|
  .h-full.flex.flex-col
    -# Header
    .px-12.pt-8.flex.flex-row.items-center.justify-between
      -# Title
      .flex.flex-col.items-start.justify-between.gap-1
        -# Context Bar
        %a.flex.flex-row.items-center.gap-2.mb-2
          = icon_component(icon: "arrow-left", size: :xs)
          %p.text-xs Weddings

        -# Title Bar
        %h2.text-xl.font-semibold Alberto & Andrea Wedding

        -# Description
        .flex.flex-row.items-center.gap-3.text-xs.text-gray-500
          .flex.flex-row.items-center.gap-1
            = icon_component(icon: "calendar", size: :sm)
            %p 14/09/2024
          .flex.flex-row.items-center.gap-1
            = icon_component(icon: "globe", size: :sm)
            %p Plasencia, Spain

    -# Navigation
    .flex.flex-row.px-12.mt-4.text-xs
      %p.cursor-pointer.px-6.py-4.text-gray-500 Summary
      %p.cursor-pointer.px-6.py-4.text-gray-500 Guests

    -# Content
    .flex-grow.bg-gray-100
      = content
