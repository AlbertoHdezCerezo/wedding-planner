- if response.ok?
  -# Hide Modal Component
  = turbo_stream.append(Places::EditComponent::Form::ID) do
    %div{ "data-common--modal-component-target": "autoClose" }

  -# If wedding had one guest before deletion
  - if @place.wedding.events.empty?
    = turbo_stream.replace(Common::TabNavigationComponent::TURBO_FRAME) do
      = turbo_frame_tag(Common::TabNavigationComponent::TURBO_FRAME, src: wedding_schedule_path(@place.wedding), loading: "lazy")
  - else
    = turbo_stream.remove(dom_id(@place))
